#include "SpiderGait.h"

SpiderGait::SpiderGait()
	: elapsed_(0)
	, phase_(0)
{
	// NOTHING
}

SpiderGait::~SpiderGait()
{
	// NOTHING
}

void SpiderGait::Update(int time)
{
	elapsed_ += time;
	if(elapsed_ > 500)
	{
		elapsed_ = elapsed_ % 500;
		phase_ = (phase_ + 1) % 2;
	}
}

int SpiderGait::Phase() const
{
	return phase_;
}
