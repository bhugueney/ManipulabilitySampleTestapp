
#ifndef _ENUMS
#define _ENUMS

#define stringify( name ) # name

namespace enums
{
	enum eMembers{ 
		Arm,
		Leg,
		HumanTorso,
		QuadrupedTorso,
		QuadrupedLeg,
		QuadrupedLegLeft,
		QuadrupedLegRight,
		UnknownTree
	};

	enum eRobots{ 
		Human,
		Quadruped,
		UnknownRobot
	};

  const std::string myEnumTreesNames[] = 
  {
	  stringify( Arm ),
	  stringify( Leg ),
	  stringify( HumanTorso ),
	  stringify( QuadrupedTorso ),
	  stringify( QuadrupedLeg ),
	  stringify( QuadrupedLegLeft ),
	  stringify( QuadrupedLegRight ),
	  stringify( UnknownTree )
  };

  const std::string myEnumRobotNames[] = 
  {
	  stringify( Human ),
	  stringify( Quadruped ),
	  stringify( UnknownRobot )
  };

  static const std::string StringTreeType( const eMembers treeType )
  {
	return myEnumTreesNames[treeType];
  }

  static const std::string StringRobotType( const eRobots robotType )
  {
	return myEnumRobotNames[robotType];
  }
} // namespace enums

#endif //_ENUMS