Robot* PostureSolver::UpdateTrees(Robot* res, Tree* actionTree, Robot::T_Tree& updateTrees, bool& changed)
{
	// ok do whatever we need to do, either lift or lock
		if(actionTree)
		{
			changed = true;
			if(actionTree->IsLocked())
			{
				if(BreakBalance(*res, *actionTree))
				{
					//TODO repositionne cette merde
				}
				actionTree->UnLockTarget();
			}
			else
			{
				LockTree(*res, *actionTree);
			}
		}
		for(Robot::T_TreeCIT it = updateTrees.begin(); it != updateTrees.end(); ++it)
		{
			if ((*it)->IsLocked())
			{
				HandleLockedTree(*res, *(*it));
			}
		}
		return res;
}

Robot* PostureSolver::CreatePosture(const Robot& robot, NUMBER time, const matrices::Matrix4& transform, Trajectory& trajectory, Trajectory::T_TimePositionsIT& position, bool& changed)
{
	changed = false; // will be true if posture truly different from previous
	Robot* res = robot.Clone();
	res->SetPosOri(transform);
	Tree* actionTree(0);

	const Robot::T_Tree& trees = res->GetTrees();
	Robot::T_Tree updateTrees;
	bool foundOneAction = false;
	// is robot stable ?
	Vector3 com = res->ComputeCom();
	SupportPolygon support(*res);
	bool robotStable = support.Contains(com); //never stable ???
	if(robotStable)
	{
		for(Robot::T_TreeCIT it = trees.begin(); it != trees.end(); ++it)
		{
			Tree* tree = (*it);
			if(tree->IsLocked())
			{
				// first check whether we should lift this tree or not
				//lift tree
				if(MustLift(*res, *tree))
				{
					if(foundOneAction || actionTree)
					{
						return 0;
					}
					foundOneAction = true;
					actionTree = tree;
				}
				else
				{
					updateTrees.push_back(tree);
				}
			}
			else if (!foundOneAction)
			{
				actionTree = tree;
			}
			else
			{
				return 0;
			}
		}
	}
	else // robot not stable
	{
		bool memberUp = false;
		// find an up tree
		for(Robot::T_TreeCIT it = trees.begin(); it != trees.end(); ++it)
		{
			if(!(*it)->IsLocked())
			{
				memberUp = true;
				robotStable = LockTree(*res, *(*it));
				changed = true;
				if(!robotStable)
				{
					//res->Translate(HandleExitingCom(*res));
					robotStable = true;
					LockTree(*res, *(*it));
				}
				foundOneAction = robotStable;
			}
			else
			{
				updateTrees.push_back(*it);
			}
		}
		if(memberUp)
		{
			if(!robotStable)
			{
				return 0;
			}
			for(Robot::T_TreeCIT it = trees.begin(); it != trees.end(); ++it)
			{
				Tree* tree = (*it);
				if(tree->IsLocked())
				{
					// first check whether we should lift this tree or not
					//lift tree
					if(MustLift(*res, *(*it)))
					{
						return 0;
					}
				}
			}
		}
		if(!memberUp)
		{
			for(Robot::T_TreeCIT it = updateTrees.begin(); it != updateTrees.end(); ++it)
			{
				Tree* tree = (*it);
				if(tree->IsLocked())
				{
					// first check whether we should lift this tree or not
					//lift tree
					if(MustLift(*res, *tree))
					{
						if(foundOneAction)
						{
							return 0;
						}
						foundOneAction = true;
						actionTree = tree;
						changed = true;
					}
				}
			}
		}
	}
	return UpdateTrees(res, actionTree, updateTrees, changed);
}

Robot* PostureSolver::NextPosture(const Robot& previousTransform, const Vector3& direction)
{
	Vector3 realDir(direction);
	realDir = realDir + previousTransform.ToWorldCoordinates().block<3,1>(0,3);
	Trajectory trajectory;
	trajectory.AddCheckPoint(1, realDir);
	CreatePostures(previousTransform, trajectory, true);
	return pImpl_->postures_.front().second;
}


Robot*	PostureSolver::CreateStillPosture (const Robot& robot, NUMBER time, const matrices::Matrix4& transform, const matrices::Matrix4& NextTransform)
{
	Robot* res = robot.Clone();
	res->SetPosOri(NextTransform);
	const Robot::T_Tree& trees = res->GetTrees();
	Tree* actionTree = 0;
	NUMBER minX = 100000000;
	// anything up ? we put it down
	bool done = false;
	std::vector<Tree::TREE_ID> liftCandidates;
	for(Robot::T_TreeCIT it = trees.begin(); it != trees.end() &! done; ++it)
	{
		Tree* tree = (*it);
		if(!tree->IsLocked())
		{
			actionTree = tree;
			done = true;
		}
		else
		{
			liftCandidates.push_back(tree->GetId());
		}
	}
	res->SetPosOri(transform);
	// else lift furthest
	if(actionTree)
	{
		//if (! LockTree(*res, *actionTree)) return 0;
		LockTree(*res, *actionTree);
		Vector3 com = res->ComputeCom();
		SupportPolygon support(*res);
		Vector3 correction = support.ReplaceCom(com); //never stable ???
		//res->Translate(correction);
	}
	else
	{
			//TEMP DEGUEULASSE
		Vector3 com = res->ComputeCom();
		SupportPolygon support(*res);
		res->SetPosOri(transform);
		Tree::TREE_ID id = support.ComputeTreeToLift(com, pImpl_->currentDir_, liftCandidates, pImpl_->lastLifted_);
		assert( id >= 0);
		// from all that must be left, take the one who s the most behind
		actionTree = res->GetTree(id);
		actionTree->UnLockTarget();
		pImpl_->lastLifted_ = id;
		//HandleExitingCom(*res);
	}
	for(Robot::T_TreeCIT it = trees.begin(); it != trees.end(); ++it)
	{
		Tree* tree = (*it);
		if(tree->IsLocked() && tree != actionTree)
		{
			HandleLockedTree(*res, *tree);
		}
	}
	return res;
}

const PostureSolver::T_Robots& PostureSolver::CreatePostures(const Robot& previousTransform, Trajectory& trajectory, bool stopAtFirst)
{
	pImpl_->Clear();
	Robot* previousPosture(0);
	Trajectory::T_TimePositions& timepos = trajectory.GetEditableTimePositions();
	Matrix3 rotation;
	Matrix4 oldTransformation;
	Matrix4 tranformation = previousTransform.ToWorldCoordinates();
	Vector3 oldPosition = tranformation.block(0,3,3,1);
	float currentTimeStep = 0.f;
	previousPosture = previousTransform.Clone();

	// first posture locks everything
	Robot::T_Tree trees = previousPosture->GetTrees();
	for(Robot::T_TreeIT treeit = trees.begin(); treeit != trees.end(); ++treeit)
	{
		Tree* tree = (*treeit);
		if(!tree->IsLocked())
		{
			LockTree(*previousPosture, *tree);
		}
		else
		{
			HandleLockedTree(*previousPosture, *tree);
		}
	}

	//current pos as first index
	trajectory.AddCheckPoint(0.f, oldPosition);
	Trajectory::T_TimePositionsIT it = timepos.begin();
	++it;
	for(; it != timepos.end() && pImpl_->postures_.size()<80; ++it)
	{
		if(pImpl_->postures_.size()>13)
		{
			bool tg = false;
		}
		pImpl_->currentDir_ = ((*it).second - oldPosition);		
		if(pImpl_->currentDir_.norm() != 0.)
		{
			pImpl_->currentDir_.normalize();
		}
		else
		{
			break;
		}
		oldTransformation = tranformation;

		//compute transformation
		matrices::GetRotationMatrix(pImpl_->oldDir_, pImpl_->currentDir_, rotation);
		tranformation.block(0,0,3,3) = tranformation.block(0,0,3,3) * rotation; 
		tranformation.block(0,3,3,1) = (*it).second; 
		//End compute transformation


		bool changed = false; // has new posture changed in terms of contact points ?
		Robot* newPosture = CreatePosture(*previousPosture, (*it).first, tranformation, trajectory, it, changed);
		if(newPosture) // only one contact was changed ? ok!
		{
			if(!changed &! (pImpl_->postures_.empty())) // new Posture is different
			{
				pImpl_->postures_.pop_back();
			}
			currentTimeStep = (*it).first;
			pImpl_->postures_.push_back(std::make_pair(currentTimeStep, newPosture));
			previousPosture = newPosture;
			// robot posture can be changed by optimization
			tranformation = newPosture->ToWorldCoordinates();
			oldPosition = tranformation.block(0,3,3,1);
			pImpl_->oldDir_ = pImpl_->currentDir_;
			if(stopAtFirst)
			{
				return pImpl_->postures_;
			}
		}
		else // let's reduce gap between wayPoints by adding one between trajectories
		{
			pImpl_->currentDir_ = pImpl_->oldDir_;
			if(!trajectory.AddWayPoint(--it)) // it placed on the new waypoint
			{
				//break;

				//we're trapped. Do the best we can without moving
				pImpl_->currentDirWeight_ = 0;
				currentTimeStep = currentTimeStep +0.01f;
				newPosture = CreateStillPosture(*previousPosture, currentTimeStep, oldTransformation, tranformation);
				pImpl_->postures_.push_back(std::make_pair(currentTimeStep, newPosture));
				previousPosture = newPosture;
				//++it; // skip next posture
			}
			else
			{
				it--; // because it ll be increased in loop
			}
			tranformation = oldTransformation; //pImpl_->postures_.back().second->ToWorldCoordinates();
		}
	}
	for(PostureSolver::T_RobotsIT it = pImpl_->postures_.begin(); it != pImpl_->postures_.end(); ++it)
	{
		pImpl_->WarnListeners((*it).first, (*it).second);
	}

	return pImpl_->postures_;
}

bool PostureSolver::HasChanged(const Robot& robot1, const Robot& robot2)
{
	const Robot::T_Tree& trees1 = robot1.GetTrees();
	const Robot::T_Tree& trees2 = robot2.GetTrees();
	for(Robot::T_TreeCIT it1 = trees1.begin(); it1!= trees1.end(); ++it1)
	{
		if((*it1)->IsLocked() != robot2.GetTree((*it1)->GetId())->IsLocked())
		{
			return true;
		}
	}
	return false;
}


void PostureSolver::RegisterPostureListener(manip_core::PostureCreatedListenerI& listener)
{
	pImpl_->listeners_.push_back(&listener);
	for(PostureSolver::T_RobotsIT it = pImpl_->postures_.begin(); it != pImpl_->postures_.end(); ++it)
	{
		listener.OnPostureCreated((*it).first, (*it).second);
	}
}

